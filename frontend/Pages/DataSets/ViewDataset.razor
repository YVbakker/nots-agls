@page "/datasets/view/{Id:int}"

<PageTitle>View dataset @Id</PageTitle>

@inject IViewDatasetViewModel _viewModel;
@inject IListLabeledDataViewModel _labeledDataViewModel;
@inject NavigationManager _navigation;

<div class="d-flex flex-row justify-content-between align-items-center">
    <h1>Datasets &#187; View</h1>
    <a href="/datasets">
        <button class="btn btn-small btn-danger">
            Cancel
        </button>
    </a>
</div>

<div class="w-full border-top my-3"></div>

<div class="container">
    <div class="form-container m-auto">
        <form>
            <div class="mb-3">
                <label for="naam" class="form-label">Naam</label>
                <input type="text" class="form-control" id="naam" @bind="_viewModel.Dataset.Name" disabled="disabled">
            </div>
        </form>
    </div>
    
    <table class="table m-auto">
            <thead>
            <tr>
                <th>Hash</th>
                <th>Useful</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var labeledData in _labeledDataViewModel.LabeledDatas)
            {
                <tr>
                    <td>@labeledData.GitCommitHash</td>
                    <td>@labeledData.IsUseful</td>
                </tr>
            }
            </tbody>
        </table>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await _viewModel.LoadDatasetAsync(Id);
        await _labeledDataViewModel.GetLabelsForDataset(Id);
    }
}