@page "/keywordsets"

<PageTitle>All Keywordsets | AGLS</PageTitle>

@inherits BaseKeywordSetListView

<div class="row my-3">
    <nav aria-label="breadcrumb" class="d-flex flex-row justify-content-between align-items-center">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item" aria-current="page">Keywordsets</li>
            <li class="breadcrumb-item active" aria-current="page">View All</li>
        </ol>
        <a href="/keywordsets/create" class="btn btn-sm btn-primary py-1 btn-lg fw-bold">
            NEW <span class="oi oi-plus ps-1"></span>
        </a>
    </nav>
</div>

<div class="row">
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>creation date</th>
                <th>modified date</th>
                <th class="actions">actions</th>
            </tr>
            </thead>
            <tbody>
            @if (ViewModel.KeywordSets == null)
            {
                <p>
                    <em>Loading...</em>
                </p>
            }
            else
            {
                @foreach (var keywordSet in ViewModel.KeywordSets)
                {
                    <tr>
                        <td>#@keywordSet.Id</td>
                        <td>@keywordSet.Name</td>
                        <td>@keywordSet.CreatedAt.ToShortDateString()</td>
                        <td>@keywordSet.LastModifiedAt.ToShortDateString()</td>
                        <td class="actions">
                            <a href="/keywordsets/@keywordSet.Id">
                                <button class="btn btn-primary btn-sm">
                                    <span class="oi oi-eye"></span>
                                </button>
                            </a>
                            <a href="/keywordsets/@keywordSet.Id/edit">
                                <button class="btn btn-secondary btn-sm">
                                    <span class="oi oi-pencil"></span>
                                </button>
                            </a>
                            <button @onclick="() => HandleRemoveClick(keywordSet.Id)" class="btn btn-danger btn-sm">
                                <span class="oi oi-trash"></span>
                            </button>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>