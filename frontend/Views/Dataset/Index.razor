@page "/datasets"

<PageTitle>Datasets</PageTitle>

@using frontend.Models
@inject KeywordService KeywordService

<div class="row mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item" aria-current="page">Datasets</li>
            <li class="breadcrumb-item active" aria-current="page">View All</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="table-responsive">

        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>creation date</th>
                    <th>modified date</th>
                    <th class="w-10">
                        <a href="/keywords/create" class="btn btn-success btn-sm float-end mx-1">
                            <span class="oi oi-plus"></span>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (datasets == null)
                {
                    <p><em>Loading...</em></p>
                }
                else
                    @foreach (var dataset in datasets)
                    {
                        <tr>
                            <td>@dataset.Id</td>
                            <td>@dataset.Name</td>
                            <td>@dataset.CreatedDate</td>
                            <td>@dataset.UpdatedDate</td>
                            <td>
                                <div class="d-flex flex-row-reverse">

                                    <button class="btn btn-danger btn-sm mx-1" @onclick="() => handleDelete(dataset.Id)">
                                        <span class="oi oi-trash"></span>
                                    </button>
                                    <a href="/dataset/@dataset.Id" class="btn btn-warning btn-sm mx-1">
                                        <span class="oi oi-pencil"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>

@code
{
    // TODO: uncomment lines!
    private List<Dataset>? datasets { get; set; }

    private async void handleDelete(int id)
    {
        var response = await DatasetSevice.Delete(id);

        if (((int)response.StatusCode) == 200)
        {
            // datasets = await DatasetService.Get();
            StateHasChanged();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        datasets = await DatasetService.Get();
    }
}